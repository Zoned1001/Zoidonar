                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="POSITIVE" />

                            <TextView
                                android:id="@+id/btAbp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="9999"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="25sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="NEGATIVE" />

                            <TextView
                                android:id="@+id/btAbn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="9999"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="25sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="VOLUME" />

                            <TextView
                                android:id="@+id/totalABVolume"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="99999999mL"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="17sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="TOTAL DONORS" />

                            <TextView
                                android:id="@+id/totalAB"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="9999"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="25sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#48FF3D00"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/a" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="POSITIVE" />

                            <TextView
                                android:id="@+id/btAp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="9999"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="25sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="NEGATIVE" />

                            <TextView
                                android:id="@+id/btAn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="9999"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="25sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="VOLUME" />

                            <TextView
                                android:id="@+id/totalAVolume"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="99999999 mL"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="17sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="TOTAL DONORS" />

                            <TextView
                                android:id="@+id/totalA"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="9999"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="25sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#48FF3D00"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/b" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="POSITIVE" />

                            <TextView
                                android:id="@+id/btBp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="9999"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="25sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="NEGATIVE" />

                            <TextView
                                android:id="@+id/btBn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="9999"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="25sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="VOLUME" />

                            <TextView
                                android:id="@+id/totalBVolume"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="99999999 mL"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="17sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="TOTAL DONORS" />

                            <TextView
                                android:id="@+id/totalB"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/bold"
                                android:gravity="center|end"
                                android:hint="9999"
                                android:paddingEnd="30dp"
                                android:textColor="@color/number"
                                android:textSize="25sp" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="#48FF3D00"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/o" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/medium"
                                android:gravity="center_vertical"
                                android:paddingStart="30dp"
                                android:text="POSITIVE" />

                            <TextView
